{
    "name": "antidot-fw/framework",
    "description": "Anti.Framework library",
    "keywords": [
        "psr-7",
        "psr-11",
        "psr-15"
    ],
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "kpicaza"
        }
    ],
    "require": {
        "php": "^7.4.0|^8.0.0",
        "laminas/laminas-config": "^3.2",
        "laminas/laminas-httphandlerrunner": "^2.1",
        "nikic/fast-route": "^1.3",
        "nyholm/psr7": "^1.4",
        "nyholm/psr7-server": "^1.0",
        "psr/container": "^1.0|^2.0",
        "psr/http-server-middleware": "^1.0",
        "react/async": "@dev",
        "react/http": "^1.5",
        "symfony/runtime": "^5.3"
    },
    "require-dev": {
        "filp/whoops": "^2.3",
        "franzl/whoops-middleware": "^1.1 || ^2.0",
        "infection/infection": "^0.20.2",
        "phpro/grumphp": "~0.17 || ~1.0",
        "phpstan/phpstan": "^0.11.5 || ^0.12.0",
        "phpunit/phpunit": "^8.0 || ^9.0",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^4.2 || ^5.0",
        "vimeo/psalm": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "Antidot\\Framework\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Antidot\\Test\\Framework\\": "test"
        }
    },
    "scripts": {
        "check-all": [
            "@cs-check",
            "@test",
            "@inspect",
            "@psalm",
            "@infection"
        ],
        "cs-check": "phpcs src --colors",
        "cs-fix": "phpcbf src --colors",
        "infection": "XDEBUG_MODE=coverage infection",
        "inspect": "phpstan analyse src -l8 --ansi",
        "psalm": "psalm",
        "test": "phpunit --colors=always"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laminas": {
            "config-provider": "Antidot\\Framework\\Config\\ConfigProvider"
        }
    }
}
